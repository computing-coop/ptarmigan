When,Where,Recipient,What for,Event or budget area,Receipt,Amount,Paid by
<%= CSV.generate do |csv|
   @expenses.each do |cs|
     csv << [ cs.when.strftime('%d/%m/%Y'), cs.location.name,  cs.recipient, cs.what_for,
        (cs.event.nil? ? "" : cs.event.name + " - ") + (cs.budgetarea.blank? ? "" :  cs.budgetarea.name),
        cs.has_receipt, 
          sprintf("%.2f", cs.amount),
          cs.paid_by
          ]
    end
    csv << [ 'Totals', nil, nil, nil, nil, nil, 
          sprintf("%.2f", @expenses.map(&:amount).flatten.sum), nil
        ]
end %>
